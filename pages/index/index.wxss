.usermotto {
  margin-top: 200px;
}

/*开始写样式  */
.section {
  background: #fff;
}
.zbs {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.flex-item {
  width: 730rpx;
  height: 200rpx;
  border-top: 1px solid #d9d9d9;
  /* 让子盒子以横轴进行布局 */
  display: flex; 
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;

}
.left {
  width: 150rpx;
  height: 150rpx;
}
.left image {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid #ccc; 
}
.right {
  width: 500rpx;
  height: 150rpx;
  margin-left: 20rpx;
  /* 子元素以纵轴布局 */
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.right .groupTitle {
  font-size: 40rpx;
}
.right .groupDes {
  font-size: 30rpx;
  color: #9b9b9b;
}