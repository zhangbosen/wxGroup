.zbs {
  padding: 0 75rpx;
}

/* input组 */
.groupTitle {
  margin: 50rpx auto 0;
  width: 260rpx;
  height: 60rpx;
}
.groupTitle input {
  box-sizing: border-box;
  border-bottom: 1rpx solid #000;
  height: 60rpx;
  text-align: center;
}

/* 头像组 */
.groupPic {
  width: 240rpx;
  height: 240rpx;
  border: 1px solid #000;
  border-radius: 50%;
  box-sizing: border-box;
  padding: 19rpx;
  margin: 50rpx auto;
}
.groupPic image {
  width: 200rpx;
  height: 200rpx;
  /* background: red; */
  border-radius: 50%;
}

/* textarea组 */
.groupDes {
  padding: 20rpx 0 280rpx;
}
.groupDes textarea {
  box-sizing: border-box;
  width: 600rpx;
  height: 200rpx;
  background-color: #fafbfc;
  padding: 10rpx;
  font-size: 25rpx;
}

